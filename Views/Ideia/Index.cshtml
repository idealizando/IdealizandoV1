<div class="right_col conteudo_paginas" role="main">

    <div class="row">

        <div class="col-md-12 col-sm-12  ">
            <div class="x_panel"  style="width:100% !important;">
                
                <div class="x_content">
                    @{ 
                        string show1 = "";
                        string show2 = "";
                        string show3 = "";
                        string aba1 = "";
                        string aba2 = "";
                        string aba3 = "";
                        if(ViewBag.AbaActiva == "1")
                        {
                            aba1 = "active";
                            show1 = "show";
                        }
                        else if (ViewBag.AbaActiva == "2")
                        {
                            aba2 = "active";
                            show2 = "show";
                        }
                        else if (ViewBag.AbaActiva == "3")
                        {
                            aba3 = "active";
                            show3 = "show";
                        }
                    }
                    <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                        <li class="nav-item titulo-aba">
                            <a class="nav-link @aba1 " id="CriarIdeia-tab" data-toggle="tab" href="#CriarIdeia" role="tab" aria-controls="CriarIdeia" aria-selected="true">Cria sua ideia inovadora</a>
                        </li>
                        <li class="nav-item titulo-aba">
                            <a class="nav-link @aba2 " id="IdeiasEmAndamento-tab" data-toggle="tab" href="#IdeiasEmAndamento" role="tab" aria-controls="IdeiasEmAndamento" aria-selected="false" style="display:flex;">
                                <img id="img_loading_ideias_em_andamento" src="/images/icon_loading.gif" width="30" height="30" /> 
                                <p>Ideias em andamento</p>
                            </a>
                        </li>
                        <li class="nav-item titulo-aba">
                            <a class="nav-link @aba3 " id="IdeiasConcluidas-tab" data-toggle="tab" href="#IdeiasConcluidas" role="tab" aria-controls="IdeiasConcluidas" aria-selected="false" style="display:flex;">
                                <img id="img_loading_ideias_concluidas" src="/images/icon_loading.gif" width="30" height="30" />
                                <p>Ideias concluídas</p>
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">

                        <!-- Criar ideia -->
                        <div class="tab-pane fade @aba1 @show1 " id="CriarIdeia" role="tabpanel" aria-labelledby="CriarIdeia-tab">

                            <div class="row">

                                <div class="col-12 col-md-4 col-sm-12 col-lg-4 ideia_negocio">
                                    <span>IDEIA DE NEGÓCIO</span>
                                    <img src="~/images/icon_ideia_negocio.png" title="ideia de negocio" alt="ideia de negocio" />
                                    <br />
                                    <a href="/Ideia/Edit?idIdeia=0&TipoIdeia=1" class="btn btn-light btn-ideias btn-prox_nv1" data-valor="1" title="ideia de negocio" name="ideianegocio">CLIQUE AQUI</a>
                                </div>

                                <div class="col-12 col-md-4 col-sm-12 col-lg-4 ideia_produto">
                                    <span>IDEIA DE PRODUTO</span>
                                    <img src="~/images/icon_ideia_produto.png" title="ideia de produto" alt="ideia de produto" />
                                    <br />
                                    <a href="/Ideia/Edit?idIdeia=0&TipoIdeia=2" class="btn btn-light btn-ideias btn-prox_nv1" data-valor="2" title="ideia de produto" name="ideiaproduto">CLIQUE AQUI</a>
                                </div>

                                <div class="col-12 col-md-4 col-sm-12 col-lg-4 ideia_processo">
                                    <span>IDEIA DE PROCESSO</span>
                                    <img src="~/images/icon_ideia_processo.png" title="ideia de processo" alt="ideia de processo" />
                                    <br />
                                    <a href="/Ideia/Edit?idIdeia=0&TipoIdeia=3" class="btn btn-light btn-ideias btn-prox_nv1" data-valor="3" title="ideia de processo" name="ideiaprocesso">CLIQUE AQUI</a>
                                </div>

                            </div>

                        </div>

                        <!-- Ideias em andamento -->
                        <div class="tab-pane fade @aba2 @show2 " id="IdeiasEmAndamento" role="tabpanel" aria-labelledby="IdeiasEmAndamento-tab">                           
                            <div>                                
                                <div class="tab_list_ideias_em_andamento">
                                    <!-- Table -->
                                    <div class="table-result mt-4 pb-3">
                                        <div class="table-responsive">
                                            <table id="table_ideias_em_andamento" class="table table-sm table-hover table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Tipo de ideia</th>
                                                        <th scope="col" class="tam_auto">Nome ideia</th>
                                                        <th class="tam_120">&nbsp;</th>
                                                    </tr>
                                                </thead>

                                                <tbody id="conteudo_ideias_em_andamento">
                                                    
                                                    <!-- ALIMENTADO VIA JS -->

                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>                                
                        </div>

                        <!-- Ideias concluidas -->
                        <div class="tab-pane fade @aba3 @show3 " id="IdeiasConcluidas" role="tabpanel" aria-labelledby="IdeiasConcluidas-tab">                           
                            <div>
                                <div class="tab_list_ideias_concluidas">
                                    <!-- Table -->
                                    <div class="table-result mt-4 pb-3">
                                        <div class="table-responsive">
                                            <table id="table_ideias_concluidas" class="table table-sm table-hover table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Tipo de ideia</th>
                                                        <th scope="col" class="tam_auto">Nome ideia</th>
                                                        <th scope="col" class="tam_76 text-center">Média nota avaliação</th>
                                                        <th class="tam_120">&nbsp;</th>
                                                    </tr>
                                                </thead>

                                                <tbody id="conteudo_ideias_concluidas">
                                                
                                                    <!-- ALIMENTADO VIA JS -->

                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

</div>
