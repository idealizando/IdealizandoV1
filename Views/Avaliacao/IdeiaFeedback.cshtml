<div class="right_col conteudo_paginas" role="main">

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <span>IDEIA: @ViewBag.Ideia.Data[0].NOMEPROJETO.ToUpper()</span>
            <br />
            <span>LIDER: @ViewBag.Ideia.Data[0].LIDER.ToUpper()</span>
            <br />

            @{
                if (ViewBag.NomesCoCriadores != "")
                {
                    <span>COCRIADORES: @ViewBag.NomesCoCriadores</span>
                    <br />
                }
            }

        </div>
    </div>

    @for (int i = 0; i < @ViewBag.Ideia.Data.Count; i++)
    {
        <div class="cards_colaborar_container">

            <h1 class="cards_colaborar_titulo_avaliacao">@ViewBag.Ideia.Data[i].TITULO</h1>
            <div class="cards_colaborar" style="height: 100%!important; padding-bottom: 10px; background-color:#e9e9e9 !important;">

                <div class="container_resposta_cocriador">
                    <div class="row resposta_cocriador_1">
                        <p>@ViewBag.Ideia.Data[i].TEXTOIDEIAINOVADORA</p><!-- Codigo provisorio, ajustar depois que ajustarmos os cadastros -->
                    </div>

                    <div class="row alinhamento_cards_avaliacao_pai">
                        @for (int j = 0; j < ViewBag.Respostas.Count; j++)
                        {
                            if (ViewBag.Respostas[j].ID_QUESTAO_IDEIAS == ViewBag.Ideia.Data[i].ID_QUESTAO_IDEIAS)
                            {
                                <div class="resposta_cocriador_2 resposta_cocriador_2_avaliacao" style="background-color:@ViewBag.Respostas[j].COR_CARD; color:#fff;">
                                    <p class="p1 p1_novo" style="width:100%; height:95%; font-size: 1em;">@ViewBag.Respostas[j].RESPOSTA</p>
                                </div>
                            }
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-9 col-sm-9">
                        <h1 class="media_ideia count">@ViewBag.MediaPontuacaoQuestaoIdeia.Data[i].MEDIA_QUESTAO_IDEIA</h1>
                    </div>

                    <div class="col-md-3 col-sm-3">
                        <a href="/Avaliacao/AvaliacaoIdeiaFeedback/?idCadastroIdeia=@ViewBag.Ideia.Data[i].ID&mediaQuestaoIdeia=@ViewBag.MediaPontuacaoQuestaoIdeia.Data[i].MEDIA_QUESTAO_IDEIA" class="btn_colaborar_design btn_avaliar_posicao_direita">
                            <img src="~/images/icon_lupa.png" />
                        </a>
                    </div>
                </div>

            </div>
        </div>
    }

    <br />
    <br />
    <br />
    <br />

    <div class="row ">

        <div class="col-md-4 col-sm-6">
            <div class="tile_count">
                <div class="col-md-12 col-sm-12  tile_stats_count">
                    <h2 class="count" id="qntFeedbacksRecebidos">@ViewBag.QtdFeedbackRecebido.Data.VALOR</h2>
                    <h2 class="count_bottom">
                        feedbacks
                        recebidos
                    </h2>
                </div>

                <div class="col-md-12 col-sm-12  tile_stats_count">
                    <h2 class="count">@ViewBag.MediaPontuacaoFeedbacks.Data[0].MEDIA</h2>
                    <h2 class="count_bottom">avaliação final</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-6">
            <br/>
            <h5>Observações</h5>
            
            <div class="carrocel-comentarios-container">
                <div class="carrocel-comentarios-itens">
                    @foreach(string item in ViewBag.ComentariosAvaliacao){ 
                        <div class="carrocel-comentarios-item">@item</div>
                    }
                </div>
                <button aria-label="Próximo" class="glider-prev">«</button>
                <button aria-label="Anterior" class="glider-next">»</button>
                <div role="tablist" class="dots"></div>
            </div>

        </div>

        <div class="col-md-3 col-sm-3 div-ideia_concluida" style="float:right; margin-bottom:20px;">
            <div class="btn-ideia_concluida">
                <h2 style="font-weight:bold;">
                    Você quer potencializar a performance da sua ideia inovadora?
                </h2>
                <span>
                    Conheça as nossas soluções e conte com os nossos mentores para a implementação dessa inovação.
                </span>
                <br />
                <br />
                <span>
                    <a href="https://idealizei.com.br/projetos/" target="_blank" class="btn btn-light btn-ideias" name="potencializarIdeia">
                        EU QUERO POTENCIALIZAR A MINHA IDEIA
                    </a>
                </span>
            </div>
        </div>

        </div>

        <div class="row">
            <div class="col-md-4 col-sm-6">
            </div>
            <div class="col-md-4 col-sm-6 widget_tally_box">
                <div class="x_panel">
                    <div class="x_title">
                        <span>Nome idea:</span>
                        <h2 style="font-weight: bold;">@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[0].NOME_IDEIA</h2>
                        <span>Média nota:</span>
                        <h2 style="font-weight: bold;">@ViewBag.MediaPontuacaoFeedbacks.Data[0].MEDIA</h2>
                        <span>Feedbacks recebidos: </span>
                        <h2 style="font-weight: bold;">@ViewBag.QtdFeedbackRecebido.Data.VALOR</h2>

                        <ul class="nav navbar-right panel_toolbox">
                            <li class="dropdown" style="opacity:0; cursor:default !important;">
                                <a href="#" class="dropdown-toggle" style="opacity:0; cursor:default !important;" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>

                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content conteudo_cad">
                        <div id="graph_bar_feedback_ideia_@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[0].ID" style="width:100%; height:200px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3">
            </div>

        </div>

        <input class="btn btn-light btn-auxiliar-grafico" name="btn-auxiliar-grafico" id="btn-auxiliar-grafico" value="@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[0].ID" hidden>

        <script type='text/javascript'>
            setTimeout(function () { document.getElementById("btn-auxiliar-grafico").click(); }, 1000);
        </script>

        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />


    </div>